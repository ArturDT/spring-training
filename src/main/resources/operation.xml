<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="deposit" class="pl.training.bank.operation.Deposit"/>

    <bean id="withdraw" class="pl.training.bank.operation.Withdraw"/>

    <bean id="operationService" class="pl.training.bank.operation.OperationService">
        <constructor-arg name="operations">
            <set>
                <ref bean="deposit"/>
                <ref bean="withdraw"/>
            </set>
        </constructor-arg>
    </bean>

</beans>