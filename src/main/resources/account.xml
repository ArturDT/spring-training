<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="accountNumberGenerator" class="pl.training.bank.account.IncrementalAccountNumberGenerator"/>

    <bean id="accountRepository" class="pl.training.bank.account.HashMapAccountRepository"/>

    <bean id="accountService" class="pl.training.bank.account.AccountService">
        <constructor-arg name="accountNumberGenerator" ref="accountNumberGenerator"/>
        <constructor-arg name="accountRepository" ref="accountRepository"/>
    </bean>

</beans>